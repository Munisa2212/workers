generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MasterDaily {
  Daily
  Hoursly
}

enum userRole {
  ADMIN
  SUPER_ADMIN
  VIEWER_ADMIN
  USER_FIZ
  USER_YUR
}

enum userStatus {
  ACTIVE
  PASSIVE
}

enum paymentType {
  CREDIT_CARD
  CASH
}

model User {
  id          Int        @id @default(autoincrement())
  fullName    String
  password    String
  phoneNumber String     @unique
  regionId    Int
  region      Region     @relation(fields: [regionId], references: [id])
  IIN         String?
  MFO         String?
  RS          String?
  Bank        String?
  OKED        String?
  ADDRESS     String
  role        userRole
  status      userStatus
  Basket      Basket[]
  Comment     Comment[]
  Order       Order[]
}

model Region {
  id      Int    @id @default(autoincrement())
  nameUz  String
  nameRU  String
  nameEng String
  User    User[]
}

model Brand {
  id      Int     @id @default(autoincrement())
  nameUz  String
  nameRU  String
  nameEng String
  Tools   Tools[]
}

model Capacity {
  id      Int     @id @default(autoincrement())
  nameUz  String
  nameRU  String
  nameEng String
  Tools   Tools[]
}

model Size {
  id      Int     @id @default(autoincrement())
  nameUz  String
  nameRU  String
  nameEng String
  Tools   Tools[]
}

model Tools {
  id             Int             @id @default(autoincrement())
  nameUz         String
  nameRU         String
  nameEng        String
  descriptionUz  String
  descriptionRU  String
  descriptionEng String
  price          Int
  quantity       Int
  code           String
  image          String
  isActive       Boolean
  capacityId     Int
  capacity       Capacity        @relation(fields: [capacityId], references: [id])
  sizeId         Int
  size           Size            @relation(fields: [sizeId], references: [id])
  brandId        Int
  brand          Brand           @relation(fields: [brandId], references: [id])
  Basket         Basket[]
  ProductTools   ProductTools[]
  OrderTools     OrderTools[]
}

model Master {
  id            Int             @id @default(autoincrement())
  fullName      String
  phone         String
  isActive      Boolean         @default(true)
  year          Int
  image         String
  passportImage String
  about         String
  MasterProd    MasterProd[]
  OrderMasters  OrderMasters[]
  MasterRatings MasterRatings[]
}

model MasterProd {
  id             Int     @id @default(autoincrement())
  masterId       Int
  master         Master  @relation(fields: [masterId], references: [id])
  productId      Int
  product        Product @relation(fields: [productId], references: [id])
  minWorkingHour Int
  levelId        Int
  level          Level   @relation(fields: [levelId], references: [id])
  priceHourly    Int
  priceDaily     Int
  experience     Int
}

model Product {
  id         Int          @id @default(autoincrement())
  nameUz     String
  nameRU     String
  nameEng    String
  image      String
  isActive   Boolean      @default(true)
  MasterProd MasterProd[]
  Basket     Basket[]

  productLevels ProductLevels[]
  ProductTools  ProductTools[]
  OrderProducts OrderProducts[]
}

model ProductLevels {
  id             Int     @id @default(autoincrement())
  levelId        Int
  level          Level   @relation(fields: [levelId], references: [id])
  productId      Int
  product        Product @relation(fields: [productId], references: [id])
  priceHourly    Int
  priceDaily     Int
  minWorkingHour Int
}

model ProductTools {
  id        Int     @id @default(autoincrement())
  toolId    Int
  tool      Tools   @relation(fields: [toolId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}

model Order {
  id                Int             @id @default(autoincrement())
  total             Int
  location          String
  address           String
  date              DateTime
  paymentType       paymentType
  withDelivery      Boolean
  status            userStatus    @default(ACTIVE)
  userId            Int
  user              User            @relation(fields: [userId], references: [id])
  OrderProducts     OrderProducts[]
  OrderTools        OrderTools[]
  OrderMasters      OrderMasters[]
  Comment           Comment[]
}

model OrderProducts {
  id          Int         @id @default(autoincrement())
  orderId     Int
  order       Order       @relation(fields: [orderId], references: [id])
  productId   Int
  product     Product     @relation(fields: [productId], references: [id])
  levelId     Int
  level       Level       @relation(fields: [levelId], references: [id])
  count       Int
  workingTime Int
  timeUnit    MasterDaily
}

model OrderTools {
  id Int @id @default(autoincrement())

  Order   Order @relation(fields: [orderId], references: [id])
  orderId Int
  Tools   Tools @relation(fields: [toolsId], references: [id])
  toolsId Int
  count Int
}

model OrderMasters {
  id       Int    @id @default(autoincrement())
  orderId  Int
  order    Order  @relation(fields: [orderId], references: [id])
  masterId Int
  master   Master @relation(fields: [masterId], references: [id])
}

model Comment {
  id            Int             @id @default(autoincrement())
  text          String
  userId        Int
  user          User            @relation(fields: [userId], references: [id])
  orderId       Int
  order         Order           @relation(fields: [orderId], references: [id])
  MasterRatings MasterRatings[]
}

model MasterRatings {
  id        Int     @id @default(autoincrement())
  star      Float
  masterId  Int
  commentId Int
  comment   Comment @relation(fields: [commentId], references: [id])
  master    Master  @relation(fields: [masterId], references: [id])
}

model Basket {
  id           Int         @id @default(autoincrement())
  productId    Int
  product      Product     @relation(fields: [productId], references: [id])
  productCount Int
  quantity     Int
  measure      Int
  toolId       Int
  tool         Tools       @relation(fields: [toolId], references: [id])
  total        Int
  userId       Int
  user         User        @relation(fields: [userId], references: [id])
  timeUnit     MasterDaily
  levelId      Int
  level        Level       @relation(fields: [levelId], references: [id])
}

model GeneralInfo {
  id    Int    @id @default(autoincrement())
  email String
  links String
  phone String
}

model Contact {
  id      Int    @id @default(autoincrement())
  name    String
  surName String
  phone   String
  address String
  message String
}

model FAQ {
  id       Int    @id @default(autoincrement())
  question String
  answer   String
}

model showCase {
  id             Int    @id @default(autoincrement())
  nameUz         String
  nameRU         String
  nameEng        String
  descriptionUz  String
  descriptionRU  String
  descriptionEng String
  image          String
  link           String
}

model Partners {
  id      Int    @id @default(autoincrement())
  nameUz  String
  nameRU  String
  nameEng String
  image   String
}

model Session {
  id        Int     @id @default(autoincrement())
  userId    Int
  ipAddress String?
  device    String
}

model Level {
  id      Int    @id @default(autoincrement())
  nameUz  String
  nameRU  String
  nameEng String

  MasterProd    MasterProd[]
  productLevels ProductLevels[]
  OrderProducts OrderProducts[]
  Basket        Basket[]
}
